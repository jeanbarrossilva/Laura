<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="AppTheme"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarNavigationButtonStyle">@style/LauraToolbarNavigationButtonStyle</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style
        name="LauraToolbarNavigationButtonStyle"
        parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/colorPrimary</item>
    </style>

    <style
        name="LauraButton"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style
        name="LauraHighlightedButton"
        parent="Widget.MaterialComponents.Button">
        <item name="android:padding">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/lauraRadius</item>
    </style>

    <style
        name="LauraTextInputLayout"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxCornerRadiusTopStart">@dimen/lauraRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/lauraRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/lauraRadius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/lauraRadius</item>
    </style>

    <style
        name="LauraTextInputEditText"
        parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">20dp</item>
        <item name="android:backgroundTint">@color/componentOnSurface</item>
    </style>

    <declare-styleable name="IndicatorLayout">
        <attr name="android:color" format="color" />
        <attr name="count" format="integer" />
    </declare-styleable>

    <declare-styleable name="BottomSheetDialogItem">
        <attr name="android:icon" format="reference" />
        <attr name="android:title" format="string" />
    </declare-styleable>

    <declare-styleable name="LauraEditTextPreference">
        <attr name="android:inputType" />
    </declare-styleable>
</resources>