<resources>
    <style
        name="AppTheme"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarNavigationButtonStyle">@style/LauraToolbarNavigationButtonStyle</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style
        name="LauraToolbarNavigationButtonStyle"
        parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/colorPrimary</item>
    </style>

    <style
        name="LauraEditText"
        parent="Widget.AppCompat.EditText">
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/bg_laura_edit_text</item>
    </style>

    <style
        name="LauraSpinner"
        parent="Widget.AppCompat.Spinner">
        <item name="android:minWidth">80dp</item>
        <item name="android:paddingHorizontal">25dp</item>
        <item name="android:textColor">@color/laura_spinner_text</item>
        <item name="android:background">@drawable/bg_laura_spinner</item>
    </style>

    <declare-styleable name="IndicatorLayout">
        <attr name="android:color" format="color" />
        <attr name="count" format="integer" />
    </declare-styleable>

    <declare-styleable name="PresentationLayout">
        <attr name="android:title" format="string" />
    </declare-styleable>

    <declare-styleable name="LauraEditTextPreference">
        <attr name="android:inputType" />
    </declare-styleable>

    <!-- DELETE -->
    <style
        name="BillButton"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/radius</item>
    </style>

    <style
        name="BillHighlightedButton"
        parent="Widget.MaterialComponents.Button">
        <item name="android:padding">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/radius</item>
    </style>

    <style
        name="BillTextInputLayout"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
    </style>

    <declare-styleable name="CurrencyAmountView">
        <attr name="currency" format="string" />
        <attr name="amount" format="float" />
    </declare-styleable>
    <!-- DELETE -->
</resources>